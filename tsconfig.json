{
  "compilerOptions": {
    "target": "ESNext",
    "lib": ["ES2022", "DOM"],
    "module": "ESNext",
    "moduleResolution": "Bundler",
    "types": ["node"],
    "resolveJsonModule": true,
    // TODO: enable
    "erasableSyntaxOnly": false,
    "libReplacement": false,
    "isolatedModules": true,
    "verbatimModuleSyntax": true,
    "esModuleInterop": true,
    "strict": true,
    "skipLibCheck": true
  },
  "include": [
    "./src/**/*.ts",
    "./docs/**/*.ts",
    "./docs/**/*.vue",
    "./tests/**/*.ts",
    "./scripts/**/*.ts",
    "./*.config.ts"
  ]
}
